<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/listview_selector"
        android:clipToPadding="false"
        android:translationZ="5dp">


        <View
            android:id="@+id/icon_device"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/iconsbluetooth"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/name_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="4dp"
            android:text="NombreBluetooth"
            android:textColor="@color/colorNegro"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_device"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_device"
            android:layout_alignStart="@+id/name_device"
            android:layout_alignLeft="@+id/name_device"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:maxLength="50"
            android:textSize="11dp" />


    </RelativeLayout>

</LinearLayout>